{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "rootDir": "src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
          ]
    },
    "exclude": [
        "node_modules",
        "webpack",
        "postcss.config.js"
    ],
    "include": [
        "src"
    ]
}